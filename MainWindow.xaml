            <RowDefinition Height="141*" />
        </Grid.RowDefinitions>
        <ComboBox Height="23" Margin="12,44,12,0" Name="cmb_url" VerticalAlignment="Top" IsEditable="True" Grid.Row="1" />
        <Label Content="Adress" Height="38" Name="label1" VerticalAlignment="Top" Margin="3,9,2,0" Grid.Row="1" />
